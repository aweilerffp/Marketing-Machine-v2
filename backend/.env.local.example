# ===========================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ===========================================
#
# SECURITY INSTRUCTIONS:
# 1. Copy this file to .env.local
# 2. Replace placeholder values with your real API keys  
# 3. NEVER commit .env.local to git
# 4. Use development keys with usage limits
#
# ===========================================

# Database Configuration (SQLite for development)
DATABASE_URL="file:./prisma/dev.db"

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Development Security Settings
# WARNING: Only use ALLOW_AUTH_BYPASS=true for local development
ALLOW_AUTH_BYPASS=true
DEV_USER_ID=dev_user_123

# Authentication (Clerk) - Get development keys from clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_CLERK_DEVELOPMENT_KEY
CLERK_SECRET_KEY=sk_test_YOUR_CLERK_DEVELOPMENT_SECRET

# Anthropic Claude Integration - Use development keys with usage limits
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_NEW_DEVELOPMENT_ANTHROPIC_KEY
CLAUDE_MODEL=claude-3-7-sonnet-latest
CLAUDE_MAX_TOKENS=20000
CLAUDE_TEMPERATURE=0.7

# OpenAI Integration - Use development keys with usage limits  
OPENAI_API_KEY=sk-proj-YOUR_NEW_DEVELOPMENT_OPENAI_KEY
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# LinkedIn API - Use development credentials
LINKEDIN_CLIENT_ID=your_development_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_development_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/auth/linkedin/callback

# Zoom API Integration
# Register your app at https://marketplace.zoom.us/develop/create
ZOOM_CLIENT_ID=your_development_zoom_client_id
ZOOM_CLIENT_SECRET=your_development_zoom_client_secret
ZOOM_REDIRECT_URI=http://localhost:5173/auth/zoom/callback
ZOOM_WEBHOOK_SECRET_TOKEN=your_development_zoom_webhook_secret_token
ZOOM_ACCOUNT_ID=your_development_zoom_account_id

# Read.ai Integration (DEPRECATED - replaced by Zoom)
# READAI_WEBHOOK_SECRET=your_development_readai_webhook_secret

# Redis Configuration (for Bull queue)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Content Generation Settings
DEFAULT_HOOKS_PER_MEETING=3
MAX_LINKEDIN_POST_LENGTH=150

# Development Tools
NGROK_URL=https://your-ngrok-url.ngrok-free.app