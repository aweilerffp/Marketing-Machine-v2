# ===========================================
# MARKETING MACHINE - PRODUCTION ENVIRONMENT
# ===========================================

# CRITICAL: NEVER use development settings in production!

# Database Configuration (Use PostgreSQL in production)
DATABASE_URL="postgresql://username:password@localhost:5432/marketing_machine_prod"

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-production-domain.com

# Security Settings - CRITICAL: These must NEVER be enabled in production
# ALLOW_AUTH_BYPASS=false  # DO NOT SET TO TRUE IN PRODUCTION
# DEV_USER_ID=            # DO NOT SET IN PRODUCTION

# Authentication (Clerk) - Use production keys
CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_CLERK_KEY
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_CLERK_SECRET

# Anthropic Claude Integration - Use production keys with usage limits
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_PRODUCTION_ANTHROPIC_KEY
CLAUDE_MODEL=claude-3-7-sonnet-latest
CLAUDE_MAX_TOKENS=20000
CLAUDE_TEMPERATURE=0.7

# OpenAI (Legacy/Fallback) - Use production keys with usage limits
OPENAI_API_KEY=sk-proj-YOUR_PRODUCTION_OPENAI_KEY
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# LinkedIn API - Use production credentials
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://your-production-domain.com/api/auth/linkedin/callback

# Read.ai Integration
READAI_WEBHOOK_SECRET=your_production_readai_webhook_secret

# Redis Configuration - Use managed Redis service in production
REDIS_ENABLED=true
REDIS_URL=redis://your-production-redis-url:6379
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379

# Content Generation Settings
DEFAULT_HOOKS_PER_MEETING=3
MAX_LINKEDIN_POST_LENGTH=150

# Production Security Headers
CORS_ORIGIN=https://your-production-domain.com
API_RATE_LIMIT=100